<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_five_dp"
    app:cardElevation="@dimen/margin_five_dp"
    app:cardCornerRadius="@dimen/margin_five_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_ten_dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Details of Delivery"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/root_layout_margin"
            android:text="@string/donor_name"
            android:textColor="@color/another_black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/donor_name_text"
            android:textSize="16sp"
            android:textColor="@color/sienna"
            android:layout_margin="@dimen/root_layout_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/root_layout_margin"
            android:text="@string/donor_contact_number"
            android:textColor="@color/another_black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/donor_contact_number_text"
            android:autoLink="phone"
            android:linksClickable="true"
            android:textSize="16sp"
            android:textColor="@color/sienna"
            android:layout_margin="@dimen/root_layout_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/root_layout_margin"
            android:text="@string/donor_address"
            android:textColor="@color/another_black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/donor_address"
            android:textSize="16sp"
            android:textColor="@color/sienna"
            android:layout_margin="@dimen/root_layout_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/root_layout_margin"
            android:text="@string/hunger_spot_address"
            android:textColor="@color/another_black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hunger_spot_address"
            android:textSize="16sp"
            android:textColor="@color/sienna"
            android:layout_margin="@dimen/root_layout_margin" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/root_layout_margin"
            android:text="@string/status_of_delivery"
            android:textColor="@color/another_black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status"
            android:textSize="16sp"
            android:textColor="@color/sienna"
            android:layout_margin="@dimen/root_layout_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delivered_on"
            android:textSize="18sp"
            android:textColor="@color/stratos"
            android:layout_margin="@dimen/root_layout_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/donation_image"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="@dimen/margin_five_dp"
                android:contentDescription="@string/donation_image"
                android:scaleType="fitCenter" />

            <ImageView

                android:id="@+id/delivery_image"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_margin="@dimen/margin_five_dp"
                android:contentDescription="@string/delivery_image"
                android:scaleType="fitCenter" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
